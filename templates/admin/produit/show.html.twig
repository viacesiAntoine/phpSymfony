{% extends'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="jumbotron">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                    </div>
                    <div class="col-md-4">
                        <h1>{{ produit.titre }}</h1>
                        <h2>{{ produit.stockQte }} pièces - {{ produit.poids }} Kg</h2>
                        <div class="text-primary" style="font-size: 4rem;font-weight: bold;">{{ produit.prixTTC | number_format(0,'',' ') }} €</div>
                        <a href="#" class="btn btn-primary">Contactez nous</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-4">
            <p>
                {{ produit.description | nl2br }}
            </p>
            <div class="row">
                <div class="col-md-8">
                    <h2>Caractéristiques</h2>
                    <table class="table table-striped">
                        <tr>
                            <td>Stock</td>
                            <td>{{ produit.stockQte }}</td>
                        </tr>
                        <tr>
                            <td>Poids</td>
                            <td>{{ produit.poids }} Kg</td>
                        </tr>
                        <tr>
                            <td>Couleur</td>
                            <td>{{ produit.couleurType }}</td>
                        </tr>
                        <tr>
                            <td>Marque</td>
                            <td>{{ produit.marque.nom }}</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-4">
                    <h2>Spécificités</h2>
                </div>
            </div>
        </div>
    <div class="container mt-4">
        <a href="{{path('admin_produit_edit',{'slug':produit.slug})}}"class="btn btn-secondary">Editer</a>
        <form method="post" action="{{ path('admin_produit_delete', {slug: produit.slug}) }}"
              onsubmit="return confirm('Sur ?')"
              style="display: inline-block"
        >
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.slug) }}">
            <button class="btn btn-danger">Supprimer</button>
        </form>
    </div>
    </div>
{% endblock %}